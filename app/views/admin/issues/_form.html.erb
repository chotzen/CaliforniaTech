<div class="row">
  <div class="col-lg-8">
    <% if @issue.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@issue.errors.count, "error") %> prohibited this article from being saved:</h2>
        <ul>
          <% @issue.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
        <a href="#" class="close">x</a>
      </div>
    <% end %>


    <%= form_for([:admin, @issue], id: 'issue_form') do |f| %>

      <div class="form-group row">
        <%= f.label :volume, class: 'col-sm-2 col-form-label'%>
        <div class="col-sm-10">
          <%= f.text_field :volume, class: 'form-control', readonly: true, value: @issue.volume %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :issue, class: 'col-sm-2 col-form-label'%>
        <div class="col-sm-10">
          <%= f.text_field :issue, class: 'form-control', readonly: true, value: @issue.issue %>
        </div>
      </div>

      <div class="row form-group">
        <%= f.label :published_at, class: 'col-sm-2' %>
        <div class="col-sm-10">
          <%= f.text_field :published_at, value: (@issue.published_at || Time.now).strftime("%Y-%m-%d"), 'data-behaviour' => 'datepicker', placeholder: "Published on" %>
        </div>
      </div>






      <div class="row form-group">
        <%= f.label :sections, class: 'col-sm-2'%>
        <div class="col-sm-10">
          <%= f.collection_radio_buttons :section_id, Section.all, :id, :display_name do |b|
            content_tag(:div, class: "form-check") do
              b.radio_button(class: "form-check-input") + b.label(class: "form-check-label")
            end
          end %>
        </div>
      </div>
      <br>
      <div class="row form-group">
        <%= f.label :published_at, class: 'col-sm-2' %>
        <div class="col-sm-10">
          <%= f.text_field :published_at, value: (@issue.published_at || Time.now).strftime("%Y-%m-%d"), 'data-behaviour' => 'datepicker', placeholder: "Published on" %>
        </div>
      </div>


    <% end %>

    <br><br><br>
  </div>
</div>
