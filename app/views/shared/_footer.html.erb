<footer class="sticky-footer footer bg-orange">
    <span class="text-white">
  <div class="container-lg">
      <div class="row align-items-end">
        <div class="col-lg-4 offset-lg-1 footer-content-left col-md-6">
          <span class="footer-brand brand">
            The California Tech
          </span>
          <br>
          <small>Official newspaper of the Associated Students of the California Institute of Technology
          <br>
          Copyright Â© 2020, ASCIT<span class="d-md-none"> | tech[at]caltech[dot]edu</span></small>
        </div>
        <div class="col-2 d-none d-lg-block">
          <% sections = Section.all %>
          <% sections[0..3].each do |section| %>
            <%= link_to section_path(section), class: "text-white" do %>
              <small class="link-white"><%= section.display_name %></small><br>
            <% end %>
          <% end %>
        </div>
        <div class="col-2 footer-content-left h-100 d-none d-lg-block">
