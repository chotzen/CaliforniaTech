              <small class="link-white"><%= section.display_name %></small><br>
            <% end %>
          <% end %>
          <%= link_to admin_articles_path, class: "text-white" do %>
            <small class="link-white">Admin Panel</small><br>
          <% end %>
        </div>
        <div class="col-lg-2 col-6 d-none d-md-block">
